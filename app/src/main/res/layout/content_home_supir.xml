<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvInfo"
            android:layout_width="216dp"
            android:layout_height="123dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/btn_to_pengiriman"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:bottomLeftRadius="50dp"
                android:bottomRightRadius="50dp"
                android:gravity="right"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="123dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:src="@drawable/icon_pengiriman_supir" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary" />

            </LinearLayout>

            <TextView
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nunito_extrabold"
                android:text="Pengiriman"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:id="@+id/cvInputq"
            android:layout_width="216dp"
            android:layout_height="117dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/btn_to_profil"
                android:layout_width="match_parent"
                android:layout_height="121dp"
                android:bottomLeftRadius="50dp"
                android:bottomRightRadius="50dp"
                android:gravity="right"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageVaccine"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:src="@drawable/icon_profile_supir" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary" />

            </LinearLayout>

            <TextView
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nunito_extrabold"
                android:text="Profil"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:id="@+id/cvHistory"
            android:layout_width="216dp"
            android:layout_height="117dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/btn_to_pengaturan"
                android:layout_width="match_parent"
                android:layout_height="121dp"
                android:bottomLeftRadius="50dp"
                android:bottomRightRadius="50dp"
                android:gravity="right"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:src="@drawable/icon_pengaturan_supir" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary" />

            </LinearLayout>

            <TextView
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nunito_extrabold"
                android:text="Pengaturan"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>